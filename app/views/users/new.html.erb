<div id="clearance" class="sign-up w-full max-w-xs m-auto bg-indigo-100 rounded-lg p-5 mt-8">
  <h2 class="text-4xl"><%= t(".title") %></h2>
  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field">
      <%= form.submit class: "w-full bg-indigo-700 hover:bg-indigo-900 cursor-pointer text-white font-bold py-2 px-4 mb-6 rounded" %>
    </div>

    <div class="other-links mb-4">
      <%= link_to t(".sign_in"), sign_in_path, class: "text-base font-medium text-gray-500 hover:text-gray-900 float-left" %>
    </div>
  <% end %>
</div>
