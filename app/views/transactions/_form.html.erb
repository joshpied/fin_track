<%= form_for @transaction do |form| %>
  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "border" %>
  </div>

  <div class="form-group">
    <%= form.label :note %>
    <%= form.text_area :note, class: "border" %>
  </div>

  <%= form.label :transaction_category_id %>
  <%= collection_select(:transaction, :transaction_category_id, TransactionCategory.all, :id, :name) %>
  <%# <%= f.select :section, :section_id, options_for_select(@sections.map{ |s| [s.title, s.id, {'data-description'=>s.description}] }) %> %>

  <%= form.submit class: "btn" %>

<% end %>