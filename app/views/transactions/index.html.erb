<%# <div class="container mx-auto px-4"> %>
<%# <div class="md:container md:mx-auto my-6"> %>
<div class="container-narrow">
  <h1 class="text-4xl text-center my-6">Transactions in <%= @current_month %></h1>

  <div class="flex justify-start mb-6">
    <%= link_to new_transaction_path, class: "btn w-full" do %>
      <i class="fas fa-plus"></i> Transaction
    <% end%>
  </div>


  <ul class="transactions flex flex-col justify-center space-y-6">
    <% @transactions.each do |transaction| %>
      <%= link_to transaction_path(transaction) do %>
        <li class="transaction flex flex-row justify-evenly items-center border rounded-xl p-5 border-indigo-200 hover:border-indigo-500">
          <div class="transaction-category-note flex-1">
            <span 
              class="text-sm text-white rounded-full py-2 px-4 mr-2"
              style="background: <%= transaction_category_color(transaction.transaction_category.name) %>">
                <i class="fas fa-<%= transaction_category_icon(transaction.transaction_category.name) %>"></i>
                <%= transaction.transaction_category.name %>
            </span>
            <%= truncate(transaction.note, length: 16) %>
          </div>

          <div class="transaction-amount mr-6">
            -<%= number_to_currency(transaction.amount) %>
          </div>

          <div class="transaction-date">
            <%= transaction.date_formatted %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>