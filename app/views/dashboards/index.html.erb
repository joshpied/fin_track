<main class="container-regular">
  <h1 class="text-indigo-400 text-4xl my-6">Hi, <%= current_user.email %></h1>
  <section class="rounded-3xl border-2 border-indigo-200 flex flex-col p-8">

    <%# 1 %>
    <div class="flex flex-row justify-between">
      <div class="flex flex-row justify-center">
        <i class="fas fa-credit-card text-2xl"></i>
        <div>
          <h3 class="text-2xl text-gray-500">This Month</h3>
          <%= link_to "Transactions", transactions_path, class: "link" %>
        </div>
      </div>
      <div class="flex flex-col">
        <h2 class="text-7xl text-gray-600"><%= number_to_currency(@recent_report.total_amount) %></h2>
        <p class="text-sm"><i class="fas fa-circle text-blue-500"></i> Current Spend</p>
      </div>
    </div>
    <%# 2 %>
    <div>
      <progress value="25" max="100" class="w-full"> 25% </progress>
    </div>
    <%# 3 %>
    <div class="flex flex-row justify-between">
      <div class="flex flex-col">
        <p class="text-3xl"><i class="fas fa-circle text-blue-500"></i> Spent</p>
        <h2 class="text-3xl text-gray-600"><%= number_to_currency(@recent_report.total_amount) %></h2>
      </div>
      <div class="flex flex-col">
        <p class="text-3xl">Remaining</p>
        <h2 class="text-3xl text-gray-600"><%= "$xxx.xx" %></h2>
      </div>
      <div class="flex flex-col">
        <p class="text-3xl">Budget</p>
        <h2 class="text-3xl text-gray-600"><%= "$xxx.xx" %></h2>
      </div>
    </div>
    <%# 4 %>
    <div>
      <%= link_to "Show Reports", reports_path, class: "link float-right" %>
    </div>

  </section>
</main>
