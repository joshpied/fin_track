<%= form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.label :email, class: "block mt-5 mb-2 text-indigo-500"%>
    <%= form.text_field :email, type: 'email', class: "w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" %>
  </div>

  <div class="password-field">
    <%= form.label :password, class: "block mb-2 text-indigo-500" %>
    <%= form.password_field :password, class: "w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300" %>
  </div>

  <div class="submit-field">
    <%= form.submit class: "w-full bg-indigo-700 hover:bg-indigo-900 cursor-pointer text-white font-bold py-2 px-4 mb-6 rounded" %>
  </div>

  <div class="other-links mb-4">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class: "text-base font-medium text-gray-500 hover:text-gray-900 float-left" %>
    <% end %>
    <%# <%= link_to t(".forgot_password"), new_password_path, class: "text-base font-medium text-gray-500 hover:text-gray-900 float-right" %> 
  </div>
<% end %>